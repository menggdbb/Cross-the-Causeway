<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TuasTrafficImageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tuas_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fff"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription"
            />

        <RelativeLayout
            android:id="@+id/tuas_image_1_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuas_image_1"
            android:background="@color/colorPrimary"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tuas_image_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuas_second_link"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuas_image_1_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/tuas_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuas_image_1_info"
            android:src="@drawable/fff"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription"/>

        <RelativeLayout
            android:id="@+id/tuas_image_2_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuas_image_2"
            android:background="@color/colorPrimary"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tuas_image_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuas_checkpoint"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuas_image_2_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/tuas_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuas_image_2_info"
            android:src="@drawable/fff"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription"/>

        <RelativeLayout
            android:id="@+id/tuas_image_3_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuas_image_3"
            android:background="@color/colorPrimary"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tuas_image_3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/after_tuas_west_road"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuas_image_3_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>